<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nmrapp.nmrtutor.MainActivity"
    android:id="@+id/drawerLayout"
    android:background="@mipmap/welcomebackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/vidBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleText"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="58dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:text="Videos Tutorial"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:text="NMR Solve iT"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/background_light"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <Button
            android:id="@+id/probBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/vidBut"
            android:layout_alignLeft="@+id/vidBut"
            android:layout_alignRight="@+id/vidBut"
            android:layout_alignStart="@+id/vidBut"
            android:layout_below="@+id/vidBut"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/background_light"
            android:text="Problems Menu"
            android:textColor="@android:color/black" />


    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        android:background="#f2f2f2"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:itemTextColor="#000000"
        ></android.support.design.widget.NavigationView>





</android.support.v4.widget.DrawerLayout>

